/**index.wxss**/
.container{
  display: block;

}
swiper{
  width: 100%;
  height: 300rpx;
}
.swipe-image{
  width: 100%;
  height: 100%;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tool-title{
  margin: 20rpx 0;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tool-title view{
  display: inline-block;
  width: 10rpx;
  height: 30rpx;
  background-color: #f65a41;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.tool{
  width: auto;
  min-width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.tool view{
  width: 180rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.tool image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
}
.tool text{
  width: 180rpx;
  display: block;
  margin-top: 10rpx;
  text-align: center;
}