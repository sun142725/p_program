/* pages/tool/cov-timer/cov-timer.wxss */
.cov-timer-container {
  width: 100%;
  height: 100%;
  background-color: rgba(234, 235, 240, 0.3);
  background-image: url("http://re0ug2h59.hn-bkt.clouddn.com/bg%402x.png");
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: left bottom;
}

.remain-time {
  text-align: center;
  padding: 114rpx 32rpx 110rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 500;
  color: #5C5959;
  line-height: 56rpx;
  letter-spacing: 1rpx;
}

.remain-time-box {
  width: 632rpx;
  height: 166rpx;
  border-radius: 16rpx;
  margin: 18rpx auto 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 72rpx 32rpx 70rpx;
  background-image: url("http://re0ug2h59.hn-bkt.clouddn.com/time-bg.png");
  background-size: 100%;
  color: #597CEB;
  line-height: 114rpx;
  font-size: 102rpx;
}
.time-1{
  width: 60rpx;
  text-align: left;
}
.time-2{
  width: 126rpx;
  margin-left: 30rpx;
}

.expire-time {
  font-size: 24rpx;
  font-weight: 500;
  color: #5C5959;
  line-height: 36rpx;
}

.cov-btn {
  width: 580rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #9FCDFB 0%, #669EF6 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}