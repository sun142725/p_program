/* pages/tool/image-to-text/image-to-text.wxss */
.image-to-text{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}

.words-view{
  flex: 1;
  width:100%;
  box-sizing: border-box;
  padding: 20rpx;
  
}
.words-view textarea{
  width: 100%;
  height: 100%;
  border-bottom: 1px solid #666;
}
.control-view{
  height: 100rpx;
}
.update-view{
  height: 200rpx;
  width:100%;
  background: blue;
  display: flex;
  justify-content: center;
  align-items: center;
}
.update-view button{
  width: 200rpx;
  background: #fff;
}