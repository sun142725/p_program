<import src="./custom-text.wxml"/>
<import src="./custom-label.wxml"/>
<import src="./custom-textImage.wxml"/>
<template name="custom">
  <view class='custom-container'>
    <view class='custom-title'>
      <text class='custom-title-text'>{{content.title}}</text>
      <text>{{content.subTitle}}</text>
      <image wx:if="{{content.isDiagnosis}}" class='tag-pic' src="https://uat-gateway.dr-elephant.net/sysfile-oss/sysFile/downloadFile?url=https://oss-dx-uat.oss-cn-shanghai.aliyuncs.com/sysFile/UX/13698078888/20190124/2f1da089c6b5421e905a594f8fa1c637.png" mode='aspectFill'></image>
    </view>
    <view class='custom-detail'>
      <template is="{{content.template}}" data="{{...content}}"/>
    </view>
    <view class='custom-footer' wx:if="{{content.hasFooter}}">
      <view>
        <text class='custom-footer-text'>健康档案</text>
      </view>
    </view>
  </view>
</template>