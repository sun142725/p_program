/* 自定义  pickview */
  .pick-view-mask{
    position: absolute;
    left: 0;
    right:0;
    top:0;
    bottom: 0;
    background-color: rgba(0,0,0,0.4);
    overflow: hidden;
  }
  .pick-view-container{
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    background: #fff;
    transform: translateY(100%);
    transition: all 0.5s;
  }
  .pick-view-container.active{
    transform: translateY(0);
    z-index: 3;
  }
  .pick-view-container .pick-view-control{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 40rpx;
    line-height: 1.5;
  }