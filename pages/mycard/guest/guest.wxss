/* pages/mycard/guest/guest.wxss */
.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.card-container {
  position: absolute;
  width: 620rpx;
  height: 850rpx;
  left: 0;
  right: 0;
  margin: auto;
  top: 10%;
  background-color: red;
}

.outer-cover {
  position: absolute;
  z-index: 2;
  border-radius: 3rpx;
  border-top: solid 150rpx transparent;
  border-right: solid 310rpx #f7f6de;
  border-bottom: solid 700rpx #f7f6de;
  border-left: solid 310rpx #f7f6de;
}

.flap {
  position: absolute;
  z-index: 2;
  border-top: solid 150rpx green;
  border-right: solid 310rpx transparent;
  border-left: solid 310rpx transparent;
  transform-origin: center top;
  transition: all 1s;
  transform: rotateX(0deg);
}

.flap.open {
  border-top: solid 150rpx #fad662;
  transform: rotateX(180deg);
}

@keyframes flap-open {
  0% {
    border-top: solid 150rpx #3292e0;
    transform: rotateX(0deg);
    transform-origin: center top;
  }

  40%,
  60%,
  100% {
    border-top: solid 150rpx #fad662;
    transform: rotateX(180deg);
    transform-origin: center top;
  }

}

/* ---------------------------------- 信封内部  -------------------------------- */
.box {
  position: absolute;
  width: 600rpx;
  height: 800rpx;
  left: 0;
  right: 0;
  margin: auto;
  top: 10rpx;
  background-color: blue;
  transform: rotateX(0) scale(1);
  transform-origin: center center 200rpx;
  transition: all 2s cubic-bezier(0, 0, 0.05, 1);
  z-index: 3;
}

.box.min {
  transform: rotateX(180deg) scale(0.8, 0.8);
  z-index: 1;
}

.box.animate {
  animation: up 2s ease 0.4s 1;
  z-index: 3;
}

@keyframes up {
  0% {
    top: 10rpx;
  }

  40% {
    top: -600rpx;
    z-index: 3
  }

  100% {
    top: 10rpx;
    z-index: 3
  }
}