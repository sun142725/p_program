/* components/cov-cell/cov-cell.wxss */
.cov-cell {
  width: 100%;
  height: 88rpx;
  padding: 22rpx 18rpx 22rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.cell-label {
  display: flex;
  align-items: center;
}

.cell-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 18rpx;
  background-color: rebeccapurple;
}

.cell-label-text {
  font-weight: 400;
  color: #2A2A2B;
  font-size: 28rpx;
}

.cell-value {
  font-size: 26rpx;
  font-weight: 400;
  color: #2A2A2B;
  line-height: 30rpx;
}