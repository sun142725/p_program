/* components/modal/modal.wxss */
.custom-mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
  overflow: hidden;
}
.custom-modal{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 300px;
  background: #fff;
  transform: translateY(100%);
  transition: all 0.5s;
  border-radius: 8rpx;
}
.custom-modal.show{
  transform: translateY(0);
}